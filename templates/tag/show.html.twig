{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Used</th>
                <td>
                   {{ tag.article ? 'Yes':'No' }}
                </td>
            </tr>
            <tr>
                <th>Articles</th>
                <td>
                    {% for article in tag.articles  %}
                        <span><a href="{{ path('article_show',{'id': article.id}) }}">[ {{ article.title }} ]</a>  </span>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tag_index') }}">back to list</a>

    <a href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a>

    {{ include('tag/_delete_form.html.twig') }}
{% endblock %}
