{% extends 'base.html.twig' %}

{% block title %}SpiritualPearls index{% endblock %}

{% block body %}
    <h1>SpiritualPearls index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>DateCreated</th>
                <th>DateEdited</th>
                <th>Author</th>
                <th>IsPublishes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for spiritual_pearl in spiritual_pearls %}
            <tr>
                <td>{{ spiritual_pearl.id }}</td>
                <td>{{ spiritual_pearl.title }}</td>
                <td>{{ spiritual_pearl.content }}</td>
                <td>{{ spiritual_pearl.dateCreated ? spiritual_pearl.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ spiritual_pearl.dateEdited ? spiritual_pearl.dateEdited|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ spiritual_pearl.author }}</td>
                <td>{{ spiritual_pearl.isPublishes ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('spiritual_pearls_show', {'id': spiritual_pearl.id}) }}">show</a>
                    <a href="{{ path('spiritual_pearls_edit', {'id': spiritual_pearl.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('spiritual_pearls_new') }}">Create new</a>
{% endblock %}
